<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="grey_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:layout_marginStart">14dp</item>
    </style>

    <style name="orange_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/orandj</item>
        <item name="android:layout_marginStart">14dp</item>
    </style>
    <style name="dark_grey_button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cornerRadius">40dp</item>
        <item name="android:textSize">30sp</item>
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="Policy.btn" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#6C6C6C</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:drawableEnd">@drawable/arrow_end</item>
        <item name="cornerRadius">10dp</item>
    </style>

</resources>
